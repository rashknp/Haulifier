<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:weightSum="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_weight="0.8"
                android:layout_gravity="top"
                android:layout_margin="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <com.limitless.haulified.Haulifier.utils.TextViewMedium
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please fill the required information to create user"/>
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/TIIntemLength"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:clipToPadding="false"
                        android:gravity="bottom"
                        android:hint="User Name"
                        app:theme="@style/TextLabel">

                        <com.limitless.haulified.Haulifier.utils.EditTextRegular
                            android:padding="8dp"
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/round_corner_filled"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textSize="13sp"
                            android:theme="@style/EditTextTheme" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:clipToPadding="false"
                        android:gravity="bottom"
                        android:hint="Email id"
                        app:theme="@style/TextLabel">

                        <com.limitless.haulified.Haulifier.utils.EditTextRegular
                            android:padding="8dp"
                            android:id="@+id/email_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/round_corner_filled"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textSize="13sp"
                            android:theme="@style/EditTextTheme" />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:id="@+id/pwd_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:clipToPadding="false"
                        android:gravity="bottom"
                        android:hint="Password"
                        app:theme="@style/TextLabel">

                        <com.limitless.haulified.Haulifier.utils.EditTextRegular
                            android:padding="8dp"
                            android:id="@+id/pwd"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/round_corner_filled"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textSize="13sp"
                            android:theme="@style/EditTextTheme" />
                    </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:clipToPadding="false"
                        android:gravity="bottom"
                        android:hint="Confirm Password"
                        app:theme="@style/TextLabel">

                        <com.limitless.haulified.Haulifier.utils.EditTextRegular
                            android:padding="8dp"
                            android:id="@+id/c_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/round_corner_filled"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textSize="13sp"
                            android:theme="@style/EditTextTheme" />
                    </android.support.design.widget.TextInputLayout>
