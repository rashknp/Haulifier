<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:buttonTint="@color/colorPrimary"
                android:id="@+id/auto"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Auto"/>
            <LinearLayout
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.limitless.haulified.Haulifier.utils.TextViewMedium
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="3dp"
                    android:text="Current Commission" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.limitless.haulified.Haulifier.utils.EditTextRegular
                        android:paddingLeft="5dp"
                        android:text="0"
                        android:inputType="number"
                        android:id="@+id/commission"
                        android:layout_weight="0.5"
                        android:background="#FFB6C1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.limitless.haulified.Haulifier.utils.TextViewMedium
                        android:layout_weight="1.5"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  %" />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.limitless.haulified.Haulifier.utils.TextViewMedium
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="3dp"
                    android:text="New Commission" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.limitless.haulified.Haulifier.utils.EditTextRegular
                        android:paddingLeft="5dp"
                        android:text="0"
                        android:inputType="number"
                        android:id="@+id/new_commission"
                        android:layout_weight="0.5"
                        android:background="#FFB6C1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.limitless.haulified.Haulifier.utils.TextViewMedium
                        android:layout_weight="1.5"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  %" />
                </LinearLayout>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Greyy"/>
            <RadioButton
                android:layout_marginTop="5dp"
                android:buttonTint="@color/colorPrimary"
                android:id="@+id/manual"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Manual"/>
        </RadioGroup>
        </LinearLayout>

    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:background="@color/colorPrimary"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/save"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="Save"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.v7.widget.CardView>
</LinearLayout>