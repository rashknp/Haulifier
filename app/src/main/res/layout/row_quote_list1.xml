        <View
            android:layout_width="match_parent"
            android:background="@color/lightGreyy"
            android:layout_height="1dp"/>
        <LinearLayout

            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:scaleType="center"
                        android:src="@drawable/go" />

                    <ImageView
                        android:background="@drawable/dash"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:scaleType="center"
                        />

                </LinearLayout>

                <com.limitless.haulified.Haulifier.utils.TextViewMedium
                    android:maxLines="3"
                    android:layout_weight="0.5"
                    android:id="@+id/pickup_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="2dp"
                    android:text="Abu Dhabi W(o)" />


                <com.limitless.haulified.Haulifier.utils.TextViewMedium

                    android:id="@+id/pickup_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="July 27,2017" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:background="@drawable/dash"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:scaleType="center"
                        />

                    <ImageView
                        android:paddingBottom="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/stop" />


                </LinearLayout>

                <com.limitless.haulified.Haulifier.utils.TextViewMedium
                    android:maxLines="3"
                    android:layout_weight="0.5"
                    android:id="@+id/delivery_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="3dp"
                    android:text="Abu Dhabi W(o)" />


                <com.limitless.haulified.Haulifier.utils.TextViewMedium
                    android:id="@+id/destination_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingBottom="3dp"
                    android:paddingTop="2dp"
                    android:text="July 27,2017" />


            </LinearLayout>


        </LinearLayout>
